# ================================
# IVAkit Environment Configuration
# ================================

# Database
DATABASE_URL="file:./data/ivakit.db"

# Redis (optional - for session state)
REDIS_URL="redis://localhost:6379"

# AI Configuration
# Local-first via Ollama (default)
OLLAMA_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2"

# Optional: Cloud AI providers (uncomment to enable)
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# Server
PORT=3000
API_PORT=3001

# Security
JWT_SECRET="change-this-in-production"
ENCRYPTION_KEY="change-this-32-char-key-in-prod!"

# Feature Flags
ENABLE_CLOUD_AI=false
ENABLE_VOICE=false
DEBUG_MODE=true

# Telemetry (opt-in)
TELEMETRY_ENABLED=false
